<div class="container mt-2">
<h3>Rate your Ride</h3>
  <%= simple_form_for ([@user, @review]) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :stars %>
      <%= f.input :content %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Create Comment", class: "btn btn-danger" %>
    </div>
  <% end %>
</div>
